generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  name       String
  description String
  email      String    @unique
  password   String
  created_at DateTime  @default(now())
  posts      Post[]    @relation("UserPosts")
  comments   Comment[]
  postVotes  PostVote[]
  userRoles  UserRole[]
}

model Role {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  userRoles UserRole[]
}

model UserRole {
  id      String   @id @default(uuid())  
  user_id String?
  role_id Int
  user    User? @relation(fields: [user_id], references: [id], onDelete: SetNull)
  role    Role @relation(fields: [role_id], references: [id])
}

model Post {
  id         String       @id @default(uuid())
  title      String
  content    String
  created_at DateTime  @default(now())
  created_by String?
  topic      String
  score      Int       @default(0)
  author     User?     @relation("UserPosts", fields: [created_by], references: [id], onDelete: SetNull)
  comments   Comment[]
  votes      PostVote[]
}

model Comment {
  id         String      @id @default(uuid())
  post_id    String
  user_id    String?
  content    String
  created_at DateTime @default(now())
  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  user       User?     @relation(fields: [user_id], references: [id], onDelete: SetNull)
}

model PostVote {
  id         Int      @id @default(autoincrement())
  user_id    String?
  post_id    String
  vote       Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User?     @relation(fields: [user_id], references: [id], onDelete: SetNull)
  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  
  @@unique([user_id, post_id])
}
